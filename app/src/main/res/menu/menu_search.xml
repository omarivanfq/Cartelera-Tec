<?xml version="1.0" encoding="utf-8"?>
<menu
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.itesm.cartelera_tec_mty.MainActivity">

    <!-- showAsAction -> ifRoom|collapseActionView which means the search view widget
    will be added to the action bar if there is enough room and it will be collapsed into a button -->
    <item android:id="@+id/item_filter"
        android:icon="@android:drawable/ic_menu_sort_by_size"
        android:title="@string/filter_view"
        app:showAsAction="always|collapseActionView"/>

    <item android:id="@+id/item_search"
        android:icon="@android:drawable/ic_menu_search"
        android:title="@string/search_view"
        app:showAsAction="always|collapseActionView"
        app:actionViewClass="android.support.v7.widget.SearchView"/>

</menu>



